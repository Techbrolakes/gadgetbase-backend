{
  "name": "gadgetbase-backend",
  "version": "1.0.0",
  "description": "Gadgetbase Backend Codebase",
  "main": "server.js",
  "scripts": {
    "build": "tsc && node build/server.js",
    "dev": "concurrently \"nodemon --exec node --trace-warnings -r ts-node/register source/server.ts\" \"npm run build\"",
    "test": "npm run test",
    "lint": "eslint . --fix",
    "type-check": "tsc --project tsconfig.json --pretty --noEmit",
    "clean": "rmdir /s /q build"
  },
  "keywords": ["gadgetbase"],
  "author": "Lekan Dar",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "joi": "^17.8.3",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "mailgen": "^2.0.27",
    "mongoose": "^7.0.0",
    "nodemailer": "^6.9.1",
    "pug": "^3.0.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/mailgen": "^2.0.5",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^18.14.6",
    "@types/nodemailer": "^6.4.7",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "ts-node": "^10.9.1",
    "tsup": "^6.6.3",
    "typescript": "^4.9.5"
  }
}
